{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ES6"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@flowcraft/shared/*": ["packages/shared/src/*"],
      "@flowcraft/designer/*": ["packages/designer/src/*"],
      "@flowcraft/preview/*": ["packages/preview/src/*"],
      "@flowcraft/collaboration/*": ["packages/collaboration/src/*"],
      "@flowcraft/ai-assistant/*": ["packages/ai-assistant/src/*"]
    }
  },
  "include": [
    "packages/*/src/**/*",
    "apps/*/src/**/*",
    "tools/*/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build"
  ]
}