{
  "name": "flowcraft",
  "version": "1.0.0",
  "description": "FlowCraft智能业务流程构建平台",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*",
    "tools/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=packages/shell",
    "dev:shared": "npm run dev --workspace=packages/shared",
    "dev:storybook": "npm run storybook --workspace=packages/shared",
    "build": "npm run build:all",
    "build:all": "npm run build --workspaces --if-present",
    "build:shared": "npm run build --workspace=packages/shared",
    "test": "npm run test --workspaces --if-present",
    "test:shared": "npm run test --workspace=packages/shared",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx --ignore-path .gitignore",
    "lint:fix": "npm run lint -- --fix",
    "type-check": "npm run type-check --workspaces --if-present",
    "clean": "rimraf node_modules packages/*/node_modules apps/*/node_modules tools/*/node_modules packages/*/dist apps/*/dist",
    "clean:install": "npm run clean && npm install",
    "security-check": "npm audit --audit-level high",
    "security-fix": "npm audit fix",
    "update-deps": "npm update && npm run update-deps --workspaces --if-present",
    "postinstall": "npm run type-check",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "devDependencies": {
    "@types/node": "^20.14.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "typescript": "^5.6.3",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test && npm run type-check"
    }
  }
}